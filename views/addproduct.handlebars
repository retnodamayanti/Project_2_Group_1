
<div class="col-lg-12"  align-items=center>
  <div class="p-5">
    <div class="text-center">
      <h1 class="h4 text-gray-900 mb-4">Add a category</h1>
    </div>
    <form class="user addCategory-form">
      <div class="form-group">
        <input
          type="name"
          class="form-control form-control-user"
          id="categoryName"
          placeholder="Category Name"
        />
      </div>
      <button
        class="btn btn-primary btn-user btn-block"
        type="submit">Add Category</button>
    </form>
    <hr />
  </div>
</div>


<div class="col-lg-12"  align-items=center>
  <div class="p-5">
    <div class="text-center">
      <h1 class="h4 text-gray-900 mb-4">Add a product</h1>
    </div>
    <form class="user addProduct-form">
      <div class="form-group">
        <input
          type="productname"
          class="form-control form-control-user"
          id="productName"
          placeholder="Product Name"
        />
      </div>
      <div class="form-group login-form">
        <input
          type="quantity"
          class="form-control form-control-user"
          id="quantity"
          placeholder="Quantity"
        />
      </div>
      <div class="form-group">
        <input
          type="stockId"
          class="form-control form-control-user"
          id="stock_id"
          placeholder="Stock id"
        />
      </div>
      <div class="form-group">
        <input
          type="filename"
          class="form-control form-control-user"
          id="filename"
          placeholder="Filename"
        />
      </div>
      <div class="form-group">
        <textarea class="form-control form-control-user" id="description" placeholder="Description"></textarea>
      </div>
      <div class="form-group">
        <input
          type="categoryId"
          class="form-control form-control-user"
          id="category_id"
          placeholder="Category id"
        />
      </div>
      <button
        class="btn btn-primary btn-user btn-block"
        type="submit">Add a product</button>
    </form>
    <hr />
  </div>
</div>

<script src="./js/addproduct.js"></script>